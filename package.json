{
  "name": "micro-sol-signer",
  "version": "0.5.0",
  "description": "Create, sign & decode Solana transactions with minimum deps",
  "files": [
    "lib",
    "src"
  ],
  "main": "lib/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/esm/index.js",
      "default": "./lib/index.js"
    },
    "./net.js": {
      "types": "./lib/net.d.ts",
      "import": "./lib/esm/net.js",
      "default": "./lib/net.js"
    }
  },
  "dependencies": {
    "@noble/curves": "^1.4.0",
    "@noble/hashes": "^1.4.0",
    "@scure/base": "^1.1.5",
    "micro-packed": "~0.7.1"
  },
  "devDependencies": {
    "@paulmillr/jsbt": "0.3.0",
    "micro-ftch": "0.4.0",
    "micro-should": "0.5.0",
    "prettier": "3.3.2",
    "typescript": "5.5.2"
  },
  "author": "Paul Miller (https://paulmillr.com)",
  "license": "MIT",
  "homepage": "https://github.com/paulmillr/micro-sol-signer",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulmillr/micro-sol-signer.git"
  },
  "scripts": {
    "build": "tsc && tsc -p tsconfig.cjs.json",
    "build:release": "npx jsbt esbuild test/build",
    "lint": "prettier --check src",
    "format": "prettier --write src",
    "test": "node test/index.js",
    "test:bun": "bun test/index.js",
    "test:deno": "deno --allow-env --allow-read test/index.js"
  },
  "sideEffects": false,
  "keywords": [
    "solana",
    "sol",
    "web3",
    "sign",
    "signer",
    "tx",
    "transaction",
    "address",
    "token"
  ],
  "funding": "https://paulmillr.com/funding/"
}
